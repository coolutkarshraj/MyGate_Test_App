<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--bold fonts-->
    <style name="Bold_14_000000" parent="LatoBold14">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LatoBold14" parent="fontStyle">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="fontStyle">
        <item name="textAllCaps">false</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Regular_14_757474" parent="LatoRegular14">
        <item name="android:textColor">@color/grey757474</item>
    </style>

    <style name="LatoRegular14" parent="fontStyle">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <!--Regular 16-->

    <style name="Regular_16_333333" parent="LatoRegular16">
        <item name="android:textColor">@color/grey333333</item>
    </style>

    <style name="LatoRegular16" parent="fontStyle">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="Medium_14_333333" parent="LatoMedium14">
        <item name="android:textColor">@color/grey333333</item>
    </style>

    <style name="LatoMedium14" parent="fontStyle">
        <item name="fontFamily">@font/lato_medium</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>


    <dimen name="sp_14">14sp</dimen>
    <dimen name="sp_16">16sp</dimen>
    <color name="grey757474">#757474</color>
    <color name="grey333333">#333333</color>
</resources>